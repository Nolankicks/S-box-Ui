@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent


<root>
	<div class="text">@text</div>
	<button @onclick=@changeScene>Start New Game</button>
	<button @onclick=@changeScene2>Level Selector</button>
</root>




@code
{

	[Property] public SceneFile startGame { get; set; } //allows the scene to be change in the editor

	
	void changeScene() //change scene void to load the newScene defined above
	{
		Log.Info("aaa");
		GameManager.ActiveScene.Load(startGame);
	}	

	protected override int BuildHash() => System.HashCode.Combine( startGame, levelSelector, text ); //does some hash shit idk
	
[Property] public SceneFile levelSelector { get; set; }
	void changeScene2()
	{
		Log.Info("bbb");
		GameManager.ActiveScene.Load(levelSelector);
	}
	[Property] public string text { get; set; } = "Hello World";
}
