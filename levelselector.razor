@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent


<root>
	<div class="text">Level Selector
	</div>
	<button @onclick=@buttonOne>Level 1</button>
	<button @onclick=@buttonTwo>Level 2</button>
	<button @onclick=@backToMenu>Return to menu</button>
</root>




@code
{

	 //allows the scene to be change in the editor
	[Property] public SceneFile sceneOne { get; set; }
	[Property] public SceneFile sceneTwo { get; set; }
	[Property] public SceneFile sceneThree { get; set; }
	[Property] public SceneFile menuScene { get; set; }
	void buttonOne() //change scene void to load the newScene defined above
	{
		Log.Info("aaa");
		GameManager.ActiveScene.Load(sceneOne);
	}	

	protected override int BuildHash() => System.HashCode.Combine( sceneOne, sceneTwo, sceneThree, menuScene ); //does some hash shit idk


	void buttonTwo()
	{
		Log.Info("Level Selector Selected");
		GameManager.ActiveScene.Load(sceneTwo);
	}

	void backToMenu()
	{
		Log.Info("Back To Menu");
		GameManager.ActiveScene.Load(menuScene);
	}


	





	
	
}
