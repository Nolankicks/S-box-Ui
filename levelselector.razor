@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent


<root>
	<div class="text">Level Selector
	</div>
	<button @onclick=@changeScene>Level 1</button>
	<button @onclick=@levelSelector>Level 2</button>
	<button @onclick=@backToMenu>Return to menu</button>
</root>




@code
{

	 //allows the scene to be change in the editor

	
	void changeScene() //change scene void to load the newScene defined above
	{
		Log.Info("aaa");
		GameManager.ActiveScene.LoadFromFile("scenes/platformer.scene");
	}	

	protected override int BuildHash() => System.HashCode.Combine( changeScene ); //does some hash shit idk


	void levelSelector()
	{
		Log.Info("Level Selector Selected");
		GameManager.ActiveScene.LoadFromFile("scenes/level2.scene");
	}

	void backToMenu()
	{
		Log.Info("Back To Menu");
		GameManager.ActiveScene.LoadFromFile("scenes/menu.scene");
	}


	





	
	
}
