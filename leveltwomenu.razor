@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent


<root>
	<div class="text">@text</div>
	<button @onclick=@changeScene>Yes</button>
	<button @onclick=@changeScene2>No</button>
</root>




@code
{

	[Property] public SceneFile yes { get; set; } //allows the scene to be change in the editor
	[Property] public SoundEvent ButtonSound {get; set;}
	
	void changeScene() //change scene void to load the newScene defined above
	{
		Log.Info("aaa");
		GameManager.ActiveScene.Load(yes);
		Sound.Play(ButtonSound);
	}	

	protected override int BuildHash() => System.HashCode.Combine( yes, no, text ); //does some hash shit idk
	
[Property] public SceneFile no { get; set; }
	void changeScene2()
	{
		Log.Info("bbb");
		GameManager.ActiveScene.Load(no);
		Sound.Play(ButtonSound);
	}
	[Property] public string text { get; set; } = "Hello World";
}
