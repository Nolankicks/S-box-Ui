@using Sandbox;
@using Sandbox.UI;
3@inherits PanelComponent


<root>
	<div class="text">@menuText</div>
	<button @onclick=@changeScene>Start New Game</button>
	<button @onclick=@levelSelector>Level Select</button>
</root>




@code
{
	[Property] public string menuText { get; set; }
	[Property] public SceneFile newScene { get; set; } //allows the scene to be change in the editor

	
	void changeScene() //change scene void to load the newScene defined above
	{
		Log.Info("aaa");
		GameManager.ActiveScene.Load(newScene);
	}	

	protected override int BuildHash() => System.HashCode.Combine( changeScene, menuText ); //does some hash shit idk


	void levelSelector()
	{
		Log.Info("Level Selector Selected");
		GameManager.ActiveScene.LoadFromFile("scenes/levelselctor.scene");
	}


	





	
	
}
